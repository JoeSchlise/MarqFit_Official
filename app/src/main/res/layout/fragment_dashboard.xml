<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/weekTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/this_week"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/daysColumn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/weekTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button android:id="@+id/daySun" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/sun"/>
        <Button android:id="@+id/dayMon" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/mon"/>
        <Button android:id="@+id/dayTue" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/tue"/>
        <Button android:id="@+id/dayWed" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/wed"/>
        <Button android:id="@+id/dayThu" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/thu"/>
        <Button android:id="@+id/dayFri" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/fri"/>
        <Button android:id="@+id/daySat" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/sat"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



